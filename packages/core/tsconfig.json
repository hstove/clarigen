{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "preserve",
    "lib": ["dom", "esnext"],
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "strictNullChecks": true
  },
  "include": ["./src/**/*"]
}
