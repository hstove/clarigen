{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "NODE_ENV",
    "NEXT_PUBLIC_STACKS_API_URL",
    "CI"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "installer/**"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "lint": {
      "outputs": [],
      "cache": true,
      "persistent": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "publish:dev": {
      "outputs": []
    }
  }
}
