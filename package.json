{
  "name": "root",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "build:packages": "bun --bun run turbo run build --filter=!clarigen-docs --filter=!@clarigen/web-tools",
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "test": "turbo run test --continue",
    "typecheck": "bun --bun run turbo run typecheck --continue --filter=!clarigen-docs",
    "publish-packages": "bun build:packages && bun update && bun turbo run publish --continue --concurrency=1",
    "publish-local": "bun build:packages && bun run publish -r",
    "publish-changesets": "bun build:packages && bun changeset publish",
    "demo-types": "bun --filter @clarigen/cli start ../../demo-project",
    "clarigen": "bun --filter @clarigen/cli start",
    "dev:web": "bun --filter clarigen-docs dev",
    "dev:tools": "bun --bun turbo run dev --filter=@clarigen/web-tools --log-prefix=none"
  },
  "prettier": "@stacks/prettier-config",
  "packageManager": "bun@1.3.4",
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@changesets/changelog-github": "0.5.0",
    "@stacks/prettier-config": "0.0.9",
    "@total-typescript/tsconfig": "^1.0.4",
    "@types/node": "24.2.0",
    "@vitest/coverage-v8": "^1.6.1",
    "husky": "^4.3.8",
    "next": "14.2.35",
    "prettier": "^2.8.8",
    "shx": "^0.3.4",
    "tsdown": "^0.17.4",
    "tslib": "^2.8.1",
    "turbo": "2.6.3",
    "typedoc": "0.25.13",
    "typescript": "5.9.3",
    "ultracite": "6.4.2",
    "vitest": "3.2.4"
  },
  "dependencies": {
    "@changesets/cli": "^2.29.8",
    "jsonfile": "^6.2.0"
  },
  "resolutions": {
    "typescript": "5.9.3",
    "whatwg-url": "^14.0.0"
  },
  "overrides": {
    "whatwg-url": "^14.0.0"
  },
  "workspaces": [
    "packages/*",
    "!**/test/**",
    "demo-project",
    "docs-site",
    "tools"
  ]
}
